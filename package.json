{
  "name": "glow-next",
  "version": "0.1.0",
  "description": "GlowNext is a modern web application starter template built with Next.js 15 and React.js 19.",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
